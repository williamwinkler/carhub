{
  "name": "api",
  "version": "1.0.0",
  "description": "Demo API to showcase autogenerated Swagger docs from Zod schemas and tRPC.",
  "author": "William Winkler",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "NODE_ENV=development nest start --watch",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migrations:generate": "typeorm-ts-node-commonjs migration:generate -d data-source.ts",
    "migrations:create": "typeorm-ts-node-commonjs migration:create",
    "migrations:run": "typeorm-ts-node-commonjs migration:run -d data-source.ts",
    "migrations:revert": "typeorm-ts-node-commonjs migration:revert -d data-source.ts",
    "migrations:show": "typeorm-ts-node-commonjs migration:show -d data-source.ts",
    "schema:sync": "typeorm-ts-node-commonjs schema:sync -d data-source.ts",
    "schema:drop": "typeorm-ts-node-commonjs schema:drop -d data-source.ts",
    "seed": "tsx scripts/seed"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@repo/logging": "workspace:*",
    "@trpc/server": "^11.5.1",
    "bcrypt": "^6.0.0",
    "cache-manager": "^7.2.0",
    "ms": "^2.1.3",
    "nestjs-cls": "^6.0.1",
    "nestjs-zod": "^5.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.26",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/ms": "^2.1.0",
    "@types/node": "^24.3.1",
    "@types/supertest": "^6.0.3",
    "dotenv": "^17.2.2",
    "jest": "^30.1.3",
    "jest-mock": "^30.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "yaml": "^2.8.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.test.json"
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@api/(.*)$": "<rootDir>/$1"
    }
  }
}
