{
  "name": "api",
  "version": "1.0.0",
  "description": "Demo API to showcase autogenerated Swagger docs from Zod schemas and tRPC.",
  "author": "William Winkler",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "NODE_ENV=development nest start --watch",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --projects test/jest-unit.config.js test/jest-integration.config.js",
    "test:unit": "jest --config test/jest-unit.config.js",
    "test:integration": "jest --config test/jest-integration.config.js",
    "test:e2e": "jest --config test/jest-e2e.config.js",
    "test:db": "jest --projects test/jest-integration.config.js test/jest-e2e.config.js",
    "test:all": "jest --projects test/jest-unit.config.js test/jest-integration.config.js test/jest-e2e.config.js",
    "test:watch": "jest --config test/jest-unit.config.js --watch",
    "test:watch:integration": "jest --config test/jest-integration.config.js --watch",
    "test:cov": "jest --projects test/jest-unit.config.js test/jest-integration.config.js --coverage",
    "test:cov:unit": "jest --config test/jest-unit.config.js --coverage",
    "test:cov:integration": "jest --config test/jest-integration.config.js --coverage",
    "test:cov:db": "jest --projects test/jest-integration.config.js test/jest-e2e.config.js --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config test/jest-unit.config.js --runInBand",
    "migrations:generate": "typeorm-ts-node-commonjs migration:generate -d data-source.ts",
    "migrations:create": "typeorm-ts-node-commonjs migration:create",
    "migrations:run": "typeorm-ts-node-commonjs migration:run -d data-source.ts",
    "migrations:revert": "typeorm-ts-node-commonjs migration:revert -d data-source.ts",
    "migrations:show": "typeorm-ts-node-commonjs migration:show -d data-source.ts",
    "schema:sync": "typeorm-ts-node-commonjs schema:sync -d data-source.ts",
    "schema:drop": "typeorm-ts-node-commonjs schema:drop -d data-source.ts",
    "seed": "ts-node -r tsconfig-paths/register scripts/seed.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@rekog/mcp-nest": "^1.8.3",
    "@repo/logging": "workspace:*",
    "@trpc/server": "^11.5.1",
    "bcrypt": "^6.0.0",
    "cache-manager": "^7.2.0",
    "github-slugger": "^2.0.0",
    "ms": "^2.1.3",
    "nestjs-cls": "^6.0.1",
    "nestjs-zod": "^5.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.26",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/ms": "^2.1.0",
    "@types/node": "^24.3.1",
    "@types/supertest": "^6.0.3",
    "dotenv": "^17.2.2",
    "jest": "^30.1.3",
    "jest-mock": "^30.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "yaml": "^2.8.1"
  },
  "jest": {
    "projects": [
      "<rootDir>/test/jest-unit.config.js",
      "<rootDir>/test/jest-integration.config.js"
    ]
  }
}
